<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.MainFragment" >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bNavMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e2a600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/test2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/depp"
        app:layout_constraintBottom_toTopOf="@+id/test3"
        app:layout_constraintEnd_toEndOf="@+id/test1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/test1"
        app:layout_constraintTop_toBottomOf="@+id/test1"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/test3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/depp"
        app:layout_constraintBottom_toTopOf="@+id/bNavMain"
        app:layout_constraintEnd_toEndOf="@id/test2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/test2"
        app:layout_constraintTop_toBottomOf="@id/test2"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/test1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/depp"
        app:layout_constraintBottom_toTopOf="@id/test2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />
</androidx.constraintlayout.widget.ConstraintLayout>