<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5sp">


    <ImageView
        android:id="@+id/film_image"
        android:layout_width="98dp"
        android:layout_height="143dp"
        tools:srcCompat="@drawable/poster" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/film_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@string/title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/film_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
                    android:layout_marginStart="10sp"
                    tools:text="@string/rating"/>

                <Button
                    android:id="@+id/adding_button"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="100sp"
                    android:layout_marginLeft="100sp"
                    android:backgroundTint="#e2a600"
                    android:text="Add"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/film_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="@string/duration"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/film_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="@string/category"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/film_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:text="Avangers is movie about super hero" />




    </LinearLayout>
</LinearLayout>